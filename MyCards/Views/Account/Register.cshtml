@model MyCards.Models.RegisterViewModel
@{
    ViewBag.Title = "הרשמה";
}
<div style="padding-right:5%;">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal ", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>יצירת משתמש</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
                @Html.LabelFor(m => m.Email, "אימייל", new { @class = "col-md-1 control-label pull-right" })
                <div class="col-md-4 pull-right">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "סיסמא", new { @class = "col-md-1 control-label pull-right" })
            <div class="col-md-4 pull-right">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, "אימות סיסמא", new {@class = "col-md-1 control-label pull-right" })

             <div class="col-md-4 pull-right">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-1 pull-right">
                <input type="submit" class="btn btn-default" value="הרשמה" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
